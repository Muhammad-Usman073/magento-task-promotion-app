<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">create_promotion_form.create_promotion_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Insert</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="notification/table/index"/>
                <class>primary</class>
                <label translate="true">Back</label>
            </button>
            <button name="save">
                <url path="notification/table/savedata"/>
                <class>primary</class>
                <label translate="true">Save</label>
            </button>
        </buttons>
        <namespace>create_promotion_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>create_promotion_form.create_promotion_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="create_promotion_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/saveData"/>
        </settings>
        <dataProvider class="Mgn\Notification\Ui\Config\CustomDataProvider" name="create_promotion_form_data_source">
            <settings>
                <requestFieldName>product_id</requestFieldName>
                <primaryFieldName>product_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="promotion_fields" sortOrder="30">
        <settings>
            <label translate="true">Insert Notifications here</label>
        </settings>
        <field name="promotion_name" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Promotion Title</label>
            </settings>
        </field>
        <field name="description" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
            </settings>
        </field>
        <field name="isPublished" formElement="checkbox">
            <settings>
                <label translate="true">Is Published</label>
                <tooltip>
                    <description translate="true">Should my Promotion display on client side?</description>
                </tooltip>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>Checkbox</prefer>
                        <valueMap>
                            <map name="false" xsi:type="boolean">false</map>
                            <map name="true" xsi:type="boolean">true</map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>

        <field name="start_date" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">start date</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Start Date</label>
                <visible>true</visible>
                <dataScope>start_date</dataScope>
            </settings>
        </field>
        <field name="end_date" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">end date</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">End Date</label>
                <visible>true</visible>
                <dataScope>end_date</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
